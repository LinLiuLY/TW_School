<!-- 欢迎文字 -->
<section id="register">
  <form action="/register" method="post" role="form" onsubmit="login();">
    用户名:
    <input type="text" name="newUser" id="newUser" placeholder="email@example.com"/>
    <% if(text rescue nil) %>
      <p>
        <%= "#{text} 请重新输入!"%>
      </p>
    <% end %>
    <p class="tip1"></p>
    密码:
    <input id="newPwdHidden" type="hidden" name="newPwd" value="" />
    <input type="password" id="newPwd" required placeholder="请输入六位以上"/>
    <p class="tip3"></p>
    姓名:
    <input type="text" name="newName" id="newName" required placeholder="请输入字母或汉字"/>
    <p class="tip4"></p>
    地址:
    <input type="text" name="addr" id="newAddress" required placeholder="请输入默认地址"/>
    手机号:
    <input type="text" name="phone" id="newPhone" required placeholder="1XX xxxx xxxx"/>
    <p class="tip2"></p>
    <a href="/entry">
      取消
    </a>
    <button type="submit" class="newLogOn">
      确定
    </button>
  </form>
</section>
  <div class="container">
    <section id="register">
      <div class="jumbotron">
      <form action="/register" class="form-horizontal" method="post" role="form" onsubmit="login();">
        <h2 class="form-signin-heading">请登入...</h2><br/>
        <div class="form-group">
          <label for="newUser" class="col-sm-1 control-label">
            用户名:
          </label>
          <div class="col-sm-8">
            <input type="text" class="form-control" name="newUser" id="newUser" placeholder="email@example.com"/>
          </div>
            <% if(text rescue nil) %>
            <p>
              <%= "#{text} 请重新输入!"%>
            </p>
            <% end %>
          <div class="col-sm-3">
            <p class="tip1"></p>
          </div>
        </div>

        <div class="form-group">
          <label for="newPwd" class="col-sm-1 control-label">
             密码:
          </label>
          <div class="col-sm-8">
          <input id="newPwdHidden" class="form-control" type="hidden" name="newPwd" value="" />
          <input type="password" class="form-control" id="newPwd" required placeholder="请输入六位以上"/>
          </div>
          <div class="col-sm-3">
            <p class="tip3"></p>
          </div>
        </div>

        <div class="form-group">
          <label for="newName" class="col-sm-1 control-label">
             姓名:
          </label>
          <div class="col-sm-8">
          <input type="text" class="form-control" name="newName" id="newName" required placeholder="请输入字母或汉字"/>
          </div>
          <div class="col-sm-3">
            <p class="tip4"></p>
          </div>
        </div>

        <div class="form-group">
          <label for="newAddress" class="col-sm-1 control-label">
             地址:
          </label>
          <div class="col-sm-8">
          <input type="text" class="form-control" name="addr" id="newAddress" required placeholder="请输入默认地址"/>
          </div>
        </div>

        <div class="form-group">
          <label for="newPhone" class="col-sm-1 control-label">
             手机号:
          </label>
          <div class="col-sm-8">
          <input type="text" class="form-control" name="phone" id="newPhone" required placeholder="1XX xxxx xxxx"/>
          </div>
          <div class="col-sm-3">
            <p class="tip2"></p>
          </div>
        </div>

        <a href="/entry">
          取消
        </a>
        <button type="submit" class="newLogOn">
          确定
        </button>
      </form>
    </div>
    </section>
  </div>
