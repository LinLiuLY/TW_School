<!-- 主体部分 -->
<div class="container">
  <div class="panel panel-success">
    <div class="panel-heading">
    <h2>请修改产品信息</h2>
    </div>
    <div class="panel-body">
      <form action="/edit/<%= @product.id %>" method="post" role="form">
        <div class="form-group">
          <label>商品名称</label>
          <input  class="form-control" name="productName" value="<%= @product.name %>">
        </div>
        <div class="form-group">
          <label>价格(元)</label>
          <input type="number" class="form-control" name="productPrice" value="<%= @product.price %>" >
        </div>
        <div class="form-group">
          <label>单位</label>
          <input class="form-control" name="productUnits" value="<%= @product.unit %>">
        </div>
        <div class="form-group">
          <label>库存</label>
          <input class="form-control" name="productStock" value="<%= @product.stock %>">
          <p class="form-error-text" id="errorTip"></p>
        </div>
        <div class="form-group">
          <label>描述</label>
          <input class="form-control" name="productDetail" value="<%= @product.detail %>">
        </div>
        <button type="submit" class="btn btn-success" id="editProduct">确认修改</button>
        <a href="/admin" class="btn btn-default">取消</a>
      </form>
    </div>
  </div>
</div>


