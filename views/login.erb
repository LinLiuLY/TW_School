<% content_for :style_chunk do%>
<link rel="stylesheet" href="styles/main.css"/>
<link rel="stylesheet" href="styles/login.css"/>
<link rel="stylesheet" href="styles/entry.css"/>
<script type="text/javascript">
	function login()
	{
		document.getElementById("pwdHidden").value = hex_sha1(document.getElementById("pwd").value);
		return true;
	}
</script>
<% end %>
<!-- 欢迎文字 -->
<section id="entry">
	<form action="/login" class="form-signin" method="post" role="form" onsubmit="login();">
		<h3 class="form-signin-heading">请登入...</h3>
		<input type="text" class="form-control" name="user" id="user" placeholder="请输入邮箱.." autofocus/>
		<input id="pwdHidden" type="hidden" name="pwd" value="" />
		<input id="pwd" type="password" class="form-control" required placeholder="请输入密码.."/>
		<a href="/register" class="btn btn-sm btn-danger" id="signUp">注册</a>
		<button type="submit" class="logOn btn btn-lg btn-primary btn-block">提交</button>
	</form>
</section>
<% content_for :script_lis do %>
    <script type="text/javascript" src="../scripts/entry.js"></script>
<% end %>
